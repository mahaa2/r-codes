 theta2 = M[1:SS,(T+2):D]
    
 ft. = matrix(, SS, T.)
 for (i in 1:SS) {
      print(i)
      K.      = K(theta2[i, ], A.)
      a       = K. %*% solve(K(theta2[i, ], A) + I)
      m       = a %*% ft[i, ]   
      Q       = K(theta2[i, ], A..) + I. - a %*% t(K.)
      test    = try(mvrnorm(1, m, Q))
      if  (inherits(test, "try-error") == TRUE) { ft.[i, ] = ft.[i-1, ] }
      else fx.[i, ] = test
      y.[i, ] = rgumax(1, ft.[i, ], sig[i]) 
 }
  
 ###################################################
